#!/bin/bash
###########################################
#                                         #
# WU v1.0.0 (Webspace Usage [DU Wrapper]) #
# --------------------------------------- #
# by Christian Schr√∂tter (cs@fnx.li)      #
#                                         #
###########################################

set -eu -o pipefail
shopt -s dotglob
dir="${1:-.}"

if [[ "$#" -gt 1 || ! -d "$dir" ]]
then
	echo "Usage: $(basename "$0") [<DIR>]" 1>&2
	echo 1>&2
	echo "Webspace Usage - simple wrapper for DU command." 1>&2
	echo "Ignores non-writable directories at first level!" 1>&2
	exit 1
fi

pwd=$(pwd)
cd -- "$dir"
args=()

if [[ "$dir" != "/" ]]
then
	dir=$(sed -r 's#^\.(/|$)##' <<< "$dir")
	dir=$(sed -r 's#/+$##' <<< "$dir")

	if [[ ! -z "$dir" ]]
	then
		dir+="/"
	fi
fi

for file in ./*
do
	if [[ -d "$file" && -w "$file" ]] || [[ -f "$file" ]]
	then
		args+=( "${dir}${file:2}" )
	fi
done

cd -- "$pwd" && du \
	--human-readable \
	--no-dereference \
	--one-file-system \
	--summarize \
	--time \
	--total \
	-- "${args[@]}"
exit $?
